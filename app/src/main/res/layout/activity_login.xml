<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingEnd="25dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingStart="25dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:orientation="vertical">

            <custom.RobotoEditText
                android:id="@+id/editText_login_email"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/rectangle_button"
                android:drawablePadding="9dp"
                android:hint="@string/loginScreen_email"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/green_800"
                android:textColorHint="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button">

            <custom.RobotoEditText
                android:id="@+id/editText_login_password"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/rectangle_button"
                android:drawablePadding="9dp"
                android:hint="@string/loginScreen_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/green_800"
                android:textColorHint="@color/primary_text" />
        </LinearLayout>


        <Button
            android:id="@+id/button_login_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:shadowColor="#000"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:paddingTop="20dp">

            <custom.RobotoTextView
                android:id="@+id/robotoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Not a Memeber?"
                android:textAlignment="center"
                android:textColor="@color/blueGray200"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/robotoTextView"
                android:orientation="horizontal">



                <custom.RobotoTextView
                    android:id="@+id/textview_link_to_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="@color/primaryGreen"
                    android:textSize="15dp" />



            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>


